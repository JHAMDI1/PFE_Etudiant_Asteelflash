@using PFE_Etudiant_Asteelflash.Domain.Entities
@model ApplicationUser

@{
    ViewData["Title"] = "Désactiver l'utilisateur";
}

<h2 class="mb-3 text-warning">Confirmer la désactivation</h2>

<div class="alert alert-warning">
    Êtes-vous sûr de vouloir désactiver l'utilisateur <strong>@Model.FirstName @Model.LastName</strong> ?
</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-warning">Désactiver</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
