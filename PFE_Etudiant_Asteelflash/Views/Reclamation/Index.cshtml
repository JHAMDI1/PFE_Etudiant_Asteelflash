@model IEnumerable<PFE_Etudiant_Asteelflash.Application.Réclamation.Dtos.ReclamationDto>
@{
    ViewData["Title"] = "Liste des réclamations";
}

<h2 class="mb-4"><i class="fas fa-list text-primary"></i> @ViewData["Title"]</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Aucune réclamation trouvée.</div>
}
else
{
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Description</th>
                <th>Date création</th>
                <th>Utilisateur</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Description</td>
                <td>@item.DateCreation.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.UserFullName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                        <i class="fas fa-eye"></i> Détails
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
