@* ------------------------------------------------------------
   Vue ResetPassword.cshtml
   Formulaire de saisie d'un nouveau mot de passe après clic
   sur le lien envoyé par email. POST vers AuthController.ResetPassword.
   ------------------------------------------------------------ *@
@model PFE_Etudiant_Asteelflash.Application.Authentication.Dtos.ResetPasswordDto
@{
    ViewData["Title"] = "Réinitialisation de mot de passe";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<h4 class="text-center mb-4">Réinitialisation de mot de passe</h4>
<div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>

<form asp-action="ResetPassword" method="post" class="d-flex flex-column align-items-center">
    <input asp-for="UserId" type="hidden" />
    <input asp-for="Token" type="hidden" />
    
    <div class="form-group w-100 mb-3">
        <label asp-for="NewPassword" class="form-label"></label>
        <input asp-for="NewPassword" class="form-control" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
        <small class="form-text text-muted">
            Le mot de passe doit contenir au moins 6 caractères
        </small>
    </div>
    
    <div class="form-group w-100 mb-3">
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary w-100 mt-2">Réinitialiser le mot de passe</button>
</form>

<div class="text-center mt-4">
    <a asp-action="Login" class="text-primary">Retour à la connexion</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
