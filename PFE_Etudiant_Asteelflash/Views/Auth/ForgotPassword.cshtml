@* ------------------------------------------------------------
   Vue ForgotPassword.cshtml
   Saisie de l'adresse email afin d'envoyer un token de
   réinitialisation. POST vers AuthController.ForgotPassword.
   ------------------------------------------------------------ *@
@{
    ViewData["Title"] = "Mot de passe oublié";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<h4 class="text-center mb-4">Réinitialisation du mot de passe</h4>
<div asp-validation-summary="All" class="text-danger text-center"></div>

<form asp-action="ForgotPassword" method="post" asp-antiforgery="true" class="d-flex flex-column align-items-center">
    <div class="form-group w-100">
        <label for="email">Adresse email</label>
        <input id="email" name="email" type="email" class="form-control" placeholder="Entrez votre adresse email" required />
    </div>

    <button type="submit" class="btn btn-primary w-100 mt-3">Envoyer le lien de réinitialisation</button>
</form>

<div class="text-center mt-4">
    <a asp-action="Login" class="text-primary">Retour à la connexion</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
