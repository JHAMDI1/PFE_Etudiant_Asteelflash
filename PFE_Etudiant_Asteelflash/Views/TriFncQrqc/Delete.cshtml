@using PFE_Etudiant_Asteelflash.Application.Tri.Dtos
@model TriFncQrqcDto
@{
    ViewData["Title"] = "Supprimer suivi de tri";
}
<h1 class="text-danger">Supprimer</h1>
<h3>Confirmez-vous la suppression de ce suivi ?</h3>
<dl class="row">
    <dt class="col-sm-2">Id</dt><dd class="col-sm-10">@Model.Id</dd>
    <dt class="col-sm-2">Date</dt><dd class="col-sm-10">@Model.DateTri.ToString("dd/MM/yyyy")</dd>
    <dt class="col-sm-2">Pilote</dt><dd class="col-sm-10">@Model.PiloteName</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
