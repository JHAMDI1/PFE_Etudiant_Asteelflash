@using PFE_Etudiant_Asteelflash.Application.Tri.Dtos
@model IEnumerable<TriFncQrqcDto>
@{
    ViewData["Title"] = "Suivi de tri";
}

<h1 class="mb-4">Suivi de tri</h1>

<table class="table table-striped table-bordered">
    <thead class="thead-light">
        <tr>
            <th>Id</th>
            <th>Date</th>
            <th>Pilote</th>
            <th>Total trié</th>
            <th>% Défaut</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.DateTri.ToString("dd/MM/yyyy")</td>
                <td>@item.PiloteName</td>
                <td>@item.TotalTrie</td>
                <td>@item.PourcentageDefaut.ToString("P1")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info mr-1">Détails</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning mr-1">Éditer</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
