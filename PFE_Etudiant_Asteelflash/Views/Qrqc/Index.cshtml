@* ------------------------------------------------------------
   Vue Qrqc/Index.cshtml
   Liste des QRQC inspirée de la vue Fnc/Index.cshtml.
   Affiche les principales informations et actions CRUD.
   Le modèle attendu est IEnumerable<QrqcDto> retourné par QrqcController.Index
   ------------------------------------------------------------ *@
@using PFE_Etudiant_Asteelflash.Application.Qrqc.Dtos
@model IEnumerable<QrqcDto>

@{
    ViewData["Title"] = "Liste des QRQC";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="row mb-3">        
        <div class="col-md-6">
            <form asp-action="Index" method="get" class="form-inline float-right">
                <div class="input-group w-100">
                    <input type="text" name="search" class="form-control" placeholder="Rechercher (FNC, processeur)..." value="@Context.Request.Query["search"]">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-outline-secondary d-flex align-items-center">
                            <i class="fas fa-search mr-1"></i> Rechercher
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Messages TempData -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>FNC</th>
                    <th>Nature défaut</th>
                    <th>Processeur</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var qrqc in Model)
                {
                    <tr>
                        <td>@qrqc.Id</td>
                        <td>@qrqc.FNCId</td>
                        <td>@qrqc.NatureDefaut</td>
                        <td>@qrqc.ProcessorFullName</td>
                        <td>
                            @if (!string.IsNullOrEmpty(qrqc.Statut))
                            {
                                <span class="badge @(qrqc.Statut == "Clôturé" ? "badge-success" : "badge-warning")">@qrqc.Statut</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@qrqc.Id" class="btn btn-sm btn-info" title="Détails">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="QuantiteChart" asp-route-id="@qrqc.Id" class="btn btn-sm btn-primary" title="Diagramme">
                                    <i class="fas fa-chart-bar"></i>
                                </a>
                                @if (!User.IsInRole("Controleur"))
                                {
                                    <a asp-action="Edit" asp-route-id="@qrqc.Id" class="btn btn-sm btn-warning" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@qrqc.Id" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce QRQC?');" title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                }
                            </div>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center">Aucun QRQC trouvé</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
