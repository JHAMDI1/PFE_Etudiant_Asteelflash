    <!-- D3: Liste des actions -->
    <div class="card mb-4">
        <div class="card-header">
            <h4 class="mb-0">D3: Liste des actions</h4>
        </div>
        <div class="card-body">
            @if (Model.ListeDesActions != null && Model.ListeDesActions.Any())
            {
                <table class="table table-striped">
                    <thead class="thead-light">
                        <tr>
                            <th>Action</th>
                            <th>Statut</th>
                            <th>Date prévue</th>
                            <th>Date réelle</th>
                            <th>Commentaire</th>
                            <th>Pilote</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var act in Model.ListeDesActions)
                        {
                            <tr>
                                <td>@act.Action</td>
                                <td>@act.StatusAction</td>
                                <td>@act.DatePrevue.ToString("dd/MM/yyyy")</td>
                                <td>@act.DateReelle.ToString("dd/MM/yyyy")</td>
                                <td>@act.Commentaire</td>
                                <td>@act.PiloteID</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">Aucune action listée.</p>
            }
        </div>
    </div>
    
    <!-- D4: Cause occurrence -->
    <div class="card mb-4">
        <div class="card-header">
            <h4 class="mb-0">D4: Cause occurrence</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Pourquoi:</dt>
                <dd class="col-sm-9">@Model.PourquoiOccurence</dd>

                <dt class="col-sm-3">Cause:</dt>
                <dd class="col-sm-9">@Model.CauseOccurence</dd>
            </dl>
        </div>
    </div>
    
    <!-- D4: Causes non détection -->
    <div class="card mb-4">
        <div class="card-header">
            <h4 class="mb-0">D4: Causes non détection</h4>
        </div>
