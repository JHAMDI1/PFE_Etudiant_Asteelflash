                        <td class="text-center">@((Model.ContenirAjout == PFE_Etudiant_Asteelflash.Domain.Enums.Enum_Action_Immediate.NOK) ? "✓" : "")</td>
                        <td class="text-center">@((Model.ContenirAjout == PFE_Etudiant_Asteelflash.Domain.Enums.Enum_Action_Immediate.NA) ? "✓" : "")</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- D3: Trier D3 -->
    <div class="card mb-4">
        <div class="card-header">
            <h4 class="mb-0">D3: Trier D3</h4>
        </div>
        <div class="card-body">
            <p><strong>Pilote:</strong> @(string.IsNullOrEmpty(Model.PiloteTrierFullName) ? Model.PiloteIDTrier : Model.PiloteTrierFullName)</p>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Actions trier</th>
                        <th class="text-center">OK</th>
                        <th class="text-center">NOK</th>
