                </thead>
                <tbody>
                    <tr>
                        <td>Stopper / Isoler lots suspects</td>
                        <td class="text-center">@((Model.ContenirStopper == PFE_Etudiant_Asteelflash.Domain.Enums.Enum_Action_Immediate.OK) ? "✓" : "")</td>
                        <td class="text-center">@((Model.ContenirStopper == PFE_Etudiant_Asteelflash.Domain.Enums.Enum_Action_Immediate.NOK) ? "✓" : "")</td>
                        <td class="text-center">@((Model.ContenirStopper == PFE_Etudiant_Asteelflash.Domain.Enums.Enum_Action_Immediate.NA) ? "✓" : "")</td>
                    </tr>
                    <tr>
