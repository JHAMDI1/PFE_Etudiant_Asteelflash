    <!-- D3: Assurer D3 -->
    <div class="card mb-4">
        <div class="card-header">
            <h4 class="mb-0">D3: Assurer D3</h4>
        </div>
        <div class="card-body">
            <p><strong>Pilote:</strong> @(string.IsNullOrEmpty(Model.PiloteAssurerFullName) ? Model.PiloteIDAssurer : Model.PiloteAssurerFullName)</p>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Actions assurer</th>
                        <th class="text-center">OK</th>
                        <th class="text-center">NOK</th>
                        <th class="text-center">N/A</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Réunion</td>
                        <td class="text-center">@((Model.AssurerReunion == PFE_Etudiant_Asteelflash.Domain.Enums.Enum_Action_Immediate.OK) ? "✓" : "")</td>
                        <td class="text-center">@((Model.AssurerReunion == PFE_Etudiant_Asteelflash.Domain.Enums.Enum_Action_Immediate.NOK) ? "✓" : "")</td>
