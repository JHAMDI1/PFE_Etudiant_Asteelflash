                <dd class="col-sm-9">@(Model.ReccurenceDuProbleme ? "Oui" : "Non")</dd>

                <dt class="col-sm-3">Risque:</dt>
                <dd class="col-sm-9">@(Model.Risque ? "Oui" : "Non")</dd>
            </dl>
