                        <td class="text-center">@((Model.ReparerDeclenchementGlobale == PFE_Etudiant_Asteelflash.Domain.Enums.Enum_Action_Immediate.OK) ? "✓" : "")</td>
                        <td class="text-center">@((Model.ReparerDeclenchementGlobale == PFE_Etudiant_Asteelflash.Domain.Enums.Enum_Action_Immediate.NOK) ? "✓" : "")</td>
                        <td class="text-center">@((Model.ReparerDeclenchementGlobale == PFE_Etudiant_Asteelflash.Domain.Enums.Enum_Action_Immediate.NA) ? "✓" : "")</td>
                    </tr>
                </tbody>
            </table>
            <br />
            <div class="form-group">
                <label><strong>Conclusion Tri:</strong></label>
                <p>@Model.ConclusionTri</p>
            </div>
        </div>
    </div>
    
    <!-- D3: Contenir D3 -->
    <div class="card mb-4">
        <div class="card-header">
