    <!-- D3: Tri action immédiate globale -->
    <div class="card mb-4">
        <div class="card-header">
            <h4 class="mb-0">D3: Tri action immédiate globale</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Jour 1:</dt>
                <dd class="col-sm-9">@Model.Jour1</dd>
                
                <dt class="col-sm-3">Jour 2:</dt>
                <dd class="col-sm-9">@Model.Jour2</dd>
                
                <dt class="col-sm-3">Jour 3:</dt>
                <dd class="col-sm-9">@Model.Jour3</dd>

                <dt class="col-sm-3">Jour 4:</dt>
                <dd class="col-sm-9">@Model.Jour4</dd>

                <dt class="col-sm-3">Jour 5:</dt>
                <dd class="col-sm-9">@Model.Jour5</dd>
            </dl>

            @if (Model.TriActions != null && Model.TriActions.Any())
            {
                <table class="table table-striped mt-3">
                    <thead>
                        <tr>
                            <th>Zone</th>
                            <th>Nb pièces triées</th>
                            <th>Nb pièces totales</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tri in Model.TriActions)
                        {
                            <tr>
                                <td>@tri.Zone</td>
                                <td>@tri.NombrePieceTrie</td>
                                <td>@tri.NombrePieceTotale</td>
                            </tr>
                        }
