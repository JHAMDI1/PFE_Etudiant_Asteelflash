@model PFE_Etudiant_Asteelflash.Application.Qrqc.Dtos.GlobalQrqcDto
@using System.Security.Claims

@{
    ViewData["Title"] = "QRQC Details";
}

<div class="container qrqc-create">
    <h2 class="mb-4">QRQC Details</h2>
    
    <!-- Basic Information -->
    <div class="card mb-4">
        <div class="card-header">
            <h4 class="mb-0">Basic Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID:</dt>
                <dd class="col-sm-9">@Model.Id</dd>
                
                <dt class="col-sm-3">Processor:</dt>
                <dd class="col-sm-9">@Model.ProcessorFullName</dd>
                
                <dt class="col-sm-3">Creation Date:</dt>
                <dd class="col-sm-9">@Model.CreationDate.ToString("d")</dd>

                <dt class="col-sm-3">FNC ID:</dt>
                <dd class="col-sm-9">@Model.FNCId</dd>

                <dt class="col-sm-3">Alerte Qualité:</dt>
                <dd class="col-sm-9">@(Model.AlerteQualite ? "Oui" : "Non")</dd>
            </dl>
        </div>
    </div>
    
    <!-- FNC Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h4 class="mb-0">FNC</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Client Name:</dt>
                <dd class="col-sm-9">@Model.Client_name</dd>
                
                <dt class="col-sm-3">Part Number:</dt>
                <dd class="col-sm-9">@Model.Part_number</dd>
                
                <dt class="col-sm-3">Nature du défaut:</dt>
                <dd class="col-sm-9">@Model.NatureDefaut</dd>
            </dl>
        </div>
    </div>
    
    <!-- D1: Définition du problème -->
    <div class="card mb-4">
        <div class="card-header">
            <h4 class="mb-0">D1: Définition du problème</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Problème:</dt>
                <dd class="col-sm-9">@Model.Probleme</dd>
                
                <dt class="col-sm-3">Lieu de détection:</dt>
                <dd class="col-sm-9">@Model.LieuDeDetection</dd>
                
                <dt class="col-sm-3">Détecteur:</dt>
                <dd class="col-sm-9">@Model.Detecteur</dd>

                <dt class="col-sm-3">Date:</dt>
                <dd class="col-sm-9">@Model.Date.ToString("d")</dd>

                <dt class="col-sm-3">Heure:</dt>
                <dd class="col-sm-9">@Model.Heure</dd>

                <dt class="col-sm-3">Manière de détection:</dt>
                <dd class="col-sm-9">@Model.ManiereDeDetection</dd>

                <dt class="col-sm-3">Nb pièces concernées:</dt>
                <dd class="col-sm-9">@Model.NbreDePiecesConcernes</dd>
            </dl>
        </div>
    </div>
    
    <!-- D2: Description du problème -->
    <div class="card mb-4">
        <div class="card-header">
            <h4 class="mb-0">D2: Description du problème</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Problème:</dt>
                <dd class="col-sm-9">@Model.Probleme</dd>

                <dt class="col-sm-3">Détecteur:</dt>
                <dd class="col-sm-9">@Model.Detecteur</dd>

                <dt class="col-sm-3">Lieu de détection:</dt>
                <dd class="col-sm-9">@Model.LieuDeDetection</dd>

                <dt class="col-sm-3">Date:</dt>
                <dd class="col-sm-9">@Model.Date.ToString("d")</dd>

                <dt class="col-sm-3">Heure:</dt>
                <dd class="col-sm-9">@Model.Heure</dd>

                <dt class="col-sm-3">Manière de détection:</dt>
                <dd class="col-sm-9">@Model.ManiereDeDetection</dd>

                <dt class="col-sm-3">Nb pièces concernées:</dt>
                <dd class="col-sm-9">@Model.NbreDePiecesConcernes</dd>

                <dt class="col-sm-3">Raison du problème:</dt>
