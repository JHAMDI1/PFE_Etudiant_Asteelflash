                        <td class="text-center">@((Model.ReparerDeclenchement == PFE_Etudiant_Asteelflash.Domain.Enums.Enum_Action_Immediate.NOK) ? "✓" : "")</td>
                        <td class="text-center">@((Model.ReparerDeclenchement == PFE_Etudiant_Asteelflash.Domain.Enums.Enum_Action_Immediate.NA) ? "✓" : "")</td>
